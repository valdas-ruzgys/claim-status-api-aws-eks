{
  "name": "claim-status-api",
  "version": "0.1.0",
  "description": "GenAI-enabled Claim Status API using NestJS, Amazon Bedrock, EKS, and API Gateway.",
  "private": true,
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "lint": "eslint ./src --ext .ts",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:lint": "npm run lint",
    "test:unit": "npm run test -- --passWithNoTests",
    "test:smoke": "BASE_URL=${BASE_URL:-http://localhost:3000} CLAIM_ID=${CLAIM_ID:-CLM-1001} ./scripts/smoke.sh",
    "populate:data": "./scripts/populate-data.sh",
    "deploy:infra": "terraform -chdir=iac/terraform apply -auto-approve",
    "destroy:infra": "terraform -chdir=iac/terraform destroy -auto-approve",
    "deploy:k8s": "kubectl apply -f k8s-manifests",
    "deploy:all": "./scripts/deploy.sh"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.569.0",
    "@aws-sdk/client-dynamodb": "^3.569.0",
    "@aws-sdk/client-s3": "^3.569.0",
    "@aws-sdk/lib-dynamodb": "^3.569.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.2.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
